{
  "name": "expense-tracker-new-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "build": "yarn --cwd client install && yarn --cwd client build",
    "dev-server": "nodemon --ignore /client ./bin/www",
    "dev-server-start": "DEBUG=expense-tracker-new:* yarn run dev-server",
    "client-start": "yarn --cwd client start",
    "dev": "concurrently --names 'SERVER,CLIENT' -c 'bgBlue.bold,bgMagenta.bold' 'yarn run dev-server-start' 'yarn run client-start'"
  },
  "dependencies": {
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "mongoose": "^5.9.15",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.4"
  }
}
